{
  "name": "simwego-api",
  "version": "1.0.0",
  "description": "SimWeGo Multi-Client Proxy API for Monty eSIM with PostgreSQL",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:seed": "node scripts/seed-clients.js",
    "db:reset": "npx sequelize-cli db:migrate:undo:all && npm run db:migrate && npm run db:seed",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f simwego-api",
    "docker:reset": "docker-compose down -v && docker-compose up -d",
    "test": "echo '\nðŸš€ SimWeGo API - Complete Test Suite\n===========================================' && jest --testSequencer=@jest/test-sequencer tests/ --verbose",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "client:list": "node scripts/manage-clients.js list",
    "client:add": "node scripts/manage-clients.js add"
  },
  "keywords": [
    "proxy",
    "esim",
    "monty",
    "simwego",
    "multi-tenant",
    "docker",
    "postgresql"
  ],
  "author": "SimWeGo",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-slow-down": "^3.0.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "sequelize": "^6.35.2",
    "swagger-ui-express": "^5.0.1",
    "validator": "^13.15.15",
    "winston": "^3.11.0",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "sequelize-cli": "^6.6.3",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/simwego/simwego-api"
  }
}
