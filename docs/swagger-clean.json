{
  "openapi": "3.0.0",
  "info": {
    "title": "SimWeGo API - eSIM Management Platform",
    "description": "SimWeGo API provides a comprehensive eSIM management solution with simplified authentication.\n\n## Authentication\n\nAll endpoints require authentication using your SimWeGo API key:\n\n- **Header**: `Authorization: Bearer YOUR_SIMWEGO_API_KEY`\n- Contact support@simwego.com to obtain your API key\n- Each API key is associated with a specific reseller account\n\n## Features\n\n- **Bundle Management**: Browse and purchase eSIM packages\n- **Order Tracking**: Monitor purchase history and status\n- **Agent Management**: Handle user accounts and permissions\n- **Network Information**: Access mobile network configurations\n- **Issue Reporting**: Submit and track support requests\n\n## Base URL\n\nDevelopment: `http://localhost:3001/api/v0`\nProduction: Contact support for production endpoints",
    "version": "1.0.0",
    "contact": {
      "name": "SimWeGo Support",
      "email": "support@simwego.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3001/api/v0",
      "description": "Development server"
    }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "API_KEY",
        "description": "Use your SimWeGo API key as Bearer token"
      }
    },
    "schemas": {
      "LoginRequest": {
        "type": "object",
        "required": ["username", "password"],
        "properties": {
          "username": {
            "type": "string",
            "description": "Your account username"
          },
          "password": {
            "type": "string",
            "format": "password",
            "description": "Your account password"
          }
        }
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" },
          "message": { "type": "string" },
          "user": {
            "type": "object",
            "properties": {
              "clientId": { "type": "string" },
              "username": { "type": "string" },
              "agentId": { "type": "string" },
              "resellerId": { "type": "string" }
            }
          },
          "tokens": {
            "type": "object",
            "properties": {
              "access_token": { "type": "string" },
              "refresh_token": { "type": "string" },
              "expires_in": { "type": "integer" },
              "token_type": { "type": "string" }
            }
          }
        }
      },
      "Bundle": {
        "type": "object",
        "properties": {
          "bundle_code": { "type": "string" },
          "bundle_name": { "type": "string" },
          "countries": { "type": "array", "items": { "type": "string" } },
          "data_amount": { "type": "string" },
          "validity_days": { "type": "integer" },
          "price": { "type": "number" },
          "currency": { "type": "string" }
        }
      },
      "Order": {
        "type": "object",
        "properties": {
          "order_id": { "type": "string" },
          "bundle_code": { "type": "string" },
          "status": { "type": "string" },
          "client_name": { "type": "string" },
          "client_email": { "type": "string" },
          "order_date": { "type": "string", "format": "date-time" },
          "activation_code": { "type": "string" },
          "iccid": { "type": "string" }
        }
      }
    }
  },
  "security": [{ "BearerAuth": [] }],
  "tags": [
    { "name": "Authentication", "description": "Authentication and token management" },
    { "name": "Bundles", "description": "eSIM bundle operations" },
    { "name": "Orders", "description": "Order processing and history" },
    { "name": "Agents", "description": "Agent and user management" },
    { "name": "System", "description": "System information and health" }
  ],
  "paths": {
    "/": {
      "get": {
        "tags": ["System"],
        "summary": "API Information",
        "description": "Get API documentation and system information",
        "security": [],
        "responses": {
          "200": {
            "description": "API information",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" },
                    "description": { "type": "string" },
                    "version": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "tags": ["System"],
        "summary": "Health Check",
        "description": "Check API and system health",
        "security": [],
        "responses": {
          "200": {
            "description": "System healthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string" },
                    "timestamp": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/Agent/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "User Login",
        "description": "Authenticate with username and password to get access tokens",
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/LoginRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/LoginResponse" }
              }
            }
          },
          "401": {
            "description": "Authentication failed"
          }
        }
      }
    },
    "/Agent/logout": {
      "post": {
        "tags": ["Authentication"],
        "summary": "User Logout",
        "description": "Logout and invalidate tokens",
        "responses": {
          "200": {
            "description": "Logout successful"
          }
        }
      }
    },
    "/Bundles": {
      "get": {
        "tags": ["Bundles"],
        "summary": "List Available Bundles",
        "description": "Get list of all available eSIM bundles",
        "responses": {
          "200": {
            "description": "List of bundles",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Bundle" }
                }
              }
            }
          }
        }
      }
    },
    "/Bundles/Reserve": {
      "post": {
        "tags": ["Bundles"],
        "summary": "Reserve a Bundle",
        "description": "Reserve an eSIM bundle for purchase",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["bundle_code", "email", "name"],
                "properties": {
                  "bundle_code": { "type": "string" },
                  "email": { "type": "string", "format": "email" },
                  "name": { "type": "string" },
                  "order_reference": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Bundle reserved successfully"
          }
        }
      }
    },
    "/Orders": {
      "get": {
        "tags": ["Orders"],
        "summary": "List Orders",
        "description": "Get order history",
        "responses": {
          "200": {
            "description": "List of orders",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Order" }
                }
              }
            }
          }
        }
      }
    },
    "/Orders/Dashboard": {
      "get": {
        "tags": ["Orders"],
        "summary": "Order Dashboard",
        "description": "Get order statistics and dashboard data",
        "responses": {
          "200": {
            "description": "Dashboard data"
          }
        }
      }
    }
  }
}